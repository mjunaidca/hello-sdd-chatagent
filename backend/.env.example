# ChatWait Backend Environment Configuration
# Copy this file to .env.local for local development

# === OPENAI AGENTS SDK CONFIGURATION ===
# Gemini API key for OpenAI-compatible endpoint
GEMINI_API_KEY=your_gemini_api_key_here

# === LLM CONFIGURATION ===
# Model configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# === FASTAPI CONFIGURATION ===
# Server configuration
HOST=localhost
PORT=8000
DEBUG=false
RELOAD=false

# === CORS CONFIGURATION ===
# Allowed origins for CORS (JSON format)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:8001"]

# === LOGGING CONFIGURATION ===
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=json

# === PERFORMANCE CONFIGURATION ===
# Streaming performance targets
MAX_TOKENS_PER_RESPONSE=4096
STREAMING_CHUNK_SIZE=1024
RESPONSE_TIMEOUT_SECONDS=30

# === SECURITY CONFIGURATION ===
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# === MONITORING CONFIGURATION ===
# Health check configuration
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL_SECONDS=30
