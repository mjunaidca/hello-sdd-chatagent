# Specs Environment Configuration
# This file contains shared environment variables for specification testing and validation

# === TESTING CONFIGURATION ===
# Test environment URL for API validation
TEST_API_BASE_URL=http://localhost:8000

# Test timeout in seconds (default: 30)
TEST_TIMEOUT_SECONDS=30

# Enable verbose test output (default: false)
TEST_VERBOSE=false

# === VALIDATION CONFIGURATION ===
# OpenAPI specification validation
OPENAPI_SPEC_PATH=./contracts/openapi.yaml

# Contract test data directory
CONTRACT_TEST_DATA_DIR=./test-data

# === DOCUMENTATION CONFIGURATION ===
# Documentation output directory
DOCS_OUTPUT_DIR=./docs

# Enable auto-generation of API docs (default: true)
AUTO_GENERATE_DOCS=true

# === PERFORMANCE TESTING ===
# Performance test duration in seconds (default: 60)
PERF_TEST_DURATION=60

# Performance test concurrent users (default: 10)
PERF_TEST_CONCURRENT_USERS=10

# Performance test target latency in ms (default: 200)
PERF_TEST_TARGET_LATENCY_MS=200
