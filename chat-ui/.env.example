# Chat UI Environment Configuration
# Copy this file to .env.local for local development

# === API CONFIGURATION ===
# Backend API base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# === DEVELOPMENT CONFIGURATION ===
# Enable debug mode (default: false)
NEXT_PUBLIC_DEBUG=false

# === FEATURE FLAGS ===
# Enable streaming mode (default: true)
NEXT_PUBLIC_ENABLE_STREAMING=true

# Enable typing indicators (default: true)
NEXT_PUBLIC_ENABLE_TYPING_INDICATORS=true

# Enable auto-scroll (default: true)
NEXT_PUBLIC_ENABLE_AUTO_SCROLL=true

# === PERFORMANCE CONFIGURATION ===
# Message history limit (default: 1000)
NEXT_PUBLIC_MAX_MESSAGE_HISTORY=1000

# Auto-scroll threshold in pixels (default: 50)
NEXT_PUBLIC_AUTO_SCROLL_THRESHOLD=50

# === ACCESSIBILITY CONFIGURATION ===
# Enable high contrast mode (default: false)
NEXT_PUBLIC_HIGH_CONTRAST=false

# Enable reduced motion (default: false)
NEXT_PUBLIC_REDUCED_MOTION=false

# === ANALYTICS CONFIGURATION (OPTIONAL) ===
# Google Analytics ID (optional)
# NEXT_PUBLIC_GA_ID=your_ga_id_here

# === ERROR REPORTING (OPTIONAL) ===
# Sentry DSN (optional)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
